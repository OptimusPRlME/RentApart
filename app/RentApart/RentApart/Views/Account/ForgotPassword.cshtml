@model RentApart.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Zaboravljena lozinka";
}

<style>
    #intro {
        background-image: url(../Content/img/bg.jpg);
        height: 100%;
    }

    body {
        padding-bottom: 0;
    }

    html, body, #intro {
        height: 100%;
        width: 100%;
    }
</style>

<div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.5);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-8">
                    <div class="bg-white rounded shadow-5-strong p-4">
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form>

                            <!-- Email input -->
                            <div class="form-outline mb-2">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mt-2">Pošalji email</button>
                        </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/login")
}
