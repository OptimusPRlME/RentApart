@model RentApart.ViewModels.AppartmentIndexViewModel


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Oglasi
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-edit"></i> Početna</a></li>
            <li class="active">Oglasi</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Moji obrisani oglasi</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->


                    @foreach (var item in Model.Appartments)
                    {
                <div class="box-body">
                    <div class="form-group">
                        @Html.DisplayNameFor(modelItem => item.Location)
                        @Html.DisplayFor(modelItem => item.Location)
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(modelItem => item.Address)
                        @Html.DisplayFor(modelItem => item.Address)
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(modelItem => item.Description)
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>

                    <div class="box-footer">
                        @Html.ActionLink("Aktiviraj", "Activate", new { Id = item.AppartmentId }, new { @class = "btn btn-info", style = "color:white;" })
                    </div>
                </div>
                    }

                </div>
            </div>
        </div>
    </section>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
