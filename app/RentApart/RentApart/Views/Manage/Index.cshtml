@model IEnumerable<RentApart.Models.User>

@{
    ViewBag.Title = "Moj nalog";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Moj nalog
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-edit"></i> Početna</a></li>
            <li class="active">Moj nalog</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Moj nalog</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->


                                <div class="box-body">
                                    @foreach (var item in Model)
                                    {
                                        <div class="form-group">
                                            @Html.DisplayNameFor(model => model.email)
                                            @Html.DisplayFor(modelItem => item.email)
                                        </div>
                                        <div class="form-group">
                                            @Html.DisplayNameFor(model => model.FirstName)
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </div>
                                        <div class="form-group">
                                            @Html.DisplayNameFor(model => model.LastName)
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </div>
                                        <div class="form-group">
                                            @Html.DisplayNameFor(model => model.Mobile)
                                            @Html.DisplayFor(modelItem => item.Mobile)
                                        </div>
                                        <div class="box-footer">
                                            @Html.ActionLink("Izmeni", "Edit", new { id = item.Id }, new { @class="btn btn-primary", style = "color:white;" })
                                        </div>
                                    }
                                </div>

                </div>
            </div>
        </div>
    </section>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
