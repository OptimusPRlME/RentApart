@using Admin;

<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MENI</li>
            <li class="@Html.IsSelected(controller: "Manage") treeview">
                <a href="@Url.Action("Index", "Manage")">
                    <i class="fa fa-edit"></i> <span>Moj nalog</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@Html.IsSelected(action: "Index")"><a href="@Url.Action("Index", "Manage")"><i class="fa fa-circle-o"></i> Moj nalog</a></li>
                    <li class="@Html.IsSelected(action: "ChangePassword")"><a href="@Url.Action("ChangePassword", "Manage")"><i class="fa fa-circle-o"></i> Promeni lozinku</a></li>
                    @if (User.IsInRole("ADMIN"))
                    {
        <li class="@Html.IsSelected(action: "UserAccounts")"><a href="@Url.Action("UserAccounts", "Manage")"><i class="fa fa-circle-o"></i> Korisnici</a></li>
}
                </ul>

            </li>

            <li class="@Html.IsSelected(controller: "Apartment") treeview">
                <a href="@Url.Action("Index", "Apartment")">
                    <i class="fa fa-info"></i> <span>Oglasi</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@Html.IsSelected(action: "Index")"><a href="@Url.Action("Index", "Apartment")"><i class="fa fa-circle-o"></i> Moji oglasi</a></li>
                    <li class="@Html.IsSelected(action: "Create")"><a href="@Url.Action("Create", "Apartment")"><i class="fa fa-circle-o"></i> Dodaj novi</a></li>
                    <li class="@Html.IsSelected(action: "ShowDeleted")"><a href="@Url.Action("ShowDeleted", "Apartment")"><i class="fa fa-circle-o"></i> Prikazi neaktivne</a></li>
                </ul>

            </li>


        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
